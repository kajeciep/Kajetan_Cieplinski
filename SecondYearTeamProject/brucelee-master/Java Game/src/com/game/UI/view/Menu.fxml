<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #000033;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.UI.view.MenuController">
   <children>
      <VBox alignment="CENTER" layoutX="125.0" layoutY="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="m_GameStill" fitHeight="204.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@solar_legends.png" />
               </image>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ImageView>
            <Button fx:id="m_SinglePlayer" mnemonicParsing="false" onAction="#handlePlayButton" prefHeight="35.0" prefWidth="350.0" text="Single Player">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="m_MultiPlayer" mnemonicParsing="false" onAction="#goMultiplayerMenu" prefHeight="35.0" prefWidth="350.0" text="Multiplayer">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="m_HowToPlay" mnemonicParsing="false" onAction="#goHelpMenu" prefHeight="35.0" prefWidth="350.0" text="How to Play">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="m_Options" mnemonicParsing="false" onAction="#goOptionsMenu" prefHeight="35.0" prefWidth="350.0" text="Options">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="m_Exit" mnemonicParsing="false" onAction="#handleExitButton" prefHeight="35.0" prefWidth="350.0" text="Exit">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
